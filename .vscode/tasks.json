{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ macos: gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-DFAB_MAIN",
                "${file}",
                "${fileDirname}/util.c",            
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
